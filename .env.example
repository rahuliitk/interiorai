# =============================================================================
# OpenLintel Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:4000
PORT=3000
API_PORT=4000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://openlintel:openlintel_dev@localhost:5432/openlintel
POSTGRES_USER=openlintel
POSTGRES_PASSWORD=openlintel_dev
POSTGRES_DB=openlintel

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Authentication (NextAuth v5)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
AUTH_SECRET=replace-with-a-secure-random-string
AUTH_URL=http://localhost:3000

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# API Key Encryption (AES-256-GCM)
# Generate with: openssl rand -hex 32
API_KEY_ENCRYPTION_SECRET=replace-with-64-char-hex-string

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
# Options: local, s3, gcs
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads

# AWS S3 (if STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=openlintel-uploads

# Google Cloud Storage (if STORAGE_PROVIDER=gcs)
GCS_PROJECT_ID=
GCS_BUCKET=openlintel-uploads
GCS_KEY_FILE=

# -----------------------------------------------------------------------------
# Search (Meilisearch)
# -----------------------------------------------------------------------------
MEILI_MASTER_KEY=openlintel_dev_key
MEILI_URL=http://localhost:7700

# -----------------------------------------------------------------------------
# AI / ML Services
# -----------------------------------------------------------------------------
# Design generation model endpoint
DESIGN_ENGINE_URL=http://localhost:8000
DESIGN_ENGINE_MODEL=stable-diffusion-xl

# OpenAI (for copilot/chat features)
OPENAI_API_KEY=

# Anthropic (for copilot/chat features)
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Email
# -----------------------------------------------------------------------------
# Options: console, smtp, sendgrid, resend
EMAIL_PROVIDER=console
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SENDGRID_API_KEY=
EMAIL_FROM=noreply@openlintel.dev

# -----------------------------------------------------------------------------
# Payment (optional, Phase 3+)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_AR_FEATURES=false
ENABLE_VR_FEATURES=false
ENABLE_PAYMENT=false
ENABLE_PROCUREMENT=false
